{
	"name": "themalker/nette-weather-api",
	"description": "A PHP wrapper for the Visual Crossing Weather API built with Nette Framework",
	"keywords": ["nette, api, weather, wrapper, php, logger, formatter"],
	"type": "project",
	"license": ["MIT"],
	"authors": [
		{
			"name": "Marek Siwek",
			"email": "eumalker@gmail.com",
			"role": "Developer"
		}
	],
	"homepage": "https://github.com/themalker/nette-weather-api",
	"require": {
		"php": ">= 8.1",
		"nette/application": "^3.2.3",
		"nette/assets": "^1.0.0",
		"nette/bootstrap": "^3.2.6",
		"nette/caching": "^3.2",
		"nette/database": "^3.2",
		"nette/di": "^3.2",
		"nette/forms": "^3.2",
		"nette/http": "^3.3",
		"nette/mail": "^4.0",
		"nette/robot-loader": "^4.0",
		"nette/security": "^3.2",
		"nette/utils": "^4.0",
		"latte/latte": "^3.0",
		"tracy/tracy": "^2.10",
		"guzzlehttp/guzzle": "^7.9",
		"symfony/dotenv": "^7.3"
	},
	"require-dev": {
		"nette/tester": "^2.5",
		"phpstan/phpstan-nette": "^2",
		"symfony/thanks": "^1"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app"
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse",
		"tester": "tester tests -s"
	},
	"minimum-stability": "stable",
	"config": {
		"allow-plugins": {
			"symfony/thanks": true
		}
	}
}
